<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="LOG4J"/>
        <setting name="autoMappingBehavior" value="FULL"/> <!-- PARTIAL是自动匹配的意思value的值还可写FULL完全匹配和NONE不自动匹配 -->
        <setting name="lazyLoadingEnabled" value="false"/> <!-- 设置全局懒加载 false为所有相关联的实体都被初始化加载 -->
    </settings>
    <typeAliases>
        <package name="com.Pojo"/>
    </typeAliases>

</configuration>